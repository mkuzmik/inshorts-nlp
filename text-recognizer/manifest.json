{
  "manifest_version": 2,
  "name": "Chrome Extension Sample",
  "description": "This extension lets you manipulate the DOM",
  "version": "1.0",
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html",
    "default_title": "ChromiePop"
  },
  "permissions": [
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "selection.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
